%% The template is best used in 16:9 aspect ratio using PDFLATEX to compile.
%% The traditional aspect ratio of 4:3 is also available.

\mode<presentation>

%% Requirements
\RequirePackage{tikz}
\RequirePackage{graphicx}

%% option for placing the banner at the bottom of the page
\DeclareOptionBeamer{corporate}[true]{\def\beamer@themeTNO@corporate{#1}}
\ExecuteOptionsBeamer{corporate=false}
%% option for showing the total number of frames
\DeclareOptionBeamer{showtotalframenumber}[true]{\def\beamer@themeTNO@showtotalframenumber{#1}}
\ExecuteOptionsBeamer{showtotalframenumber=true}
%% option for showing the navigation bar
\DeclareOptionBeamer{shownavigation}[true]{\def\beamer@themeTNO@shownavigation{#1}}
\ExecuteOptionsBeamer{shownavigation=false}

\ProcessOptionsBeamer

%% Themes
\useinnertheme{TNO}
\useoutertheme[corporate=\beamer@themeTNO@corporate,
 	showtotalframenumber=\beamer@themeTNO@showtotalframenumber,
 	shownavigation=\beamer@themeTNO@shownavigation,
]{TNO}
\usecolortheme{TNO}
\usefonttheme[onlymath]{serif}

%% Templates
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=false]

%% Fonts
\setbeamerfont{title}{series=\bfseries,size=\LARGE}
\setbeamerfont{subtitle}{series=\bfseries,size=\Large}
\setbeamerfont{author}{series=\bfseries,size=\normalsize}
\setbeamerfont{frametitle}{series=\bfseries,size=\Large}

%% Body text position
\ifnum\AspectR=169\relax
    \setbeamersize{text margin left=7.25mm,text margin right=7.25mm}
\else
    \setbeamersize{text margin left=6.4mm,text margin right=6.4mm}
\fi
\setlength{\leftmargini}{3mm}
\setlength{\leftmarginii}{3mm}

%% Define variable-width block environment
\newenvironment<>{varblock}[2][.9\textwidth]{%
    \setlength{\textwidth}{#1}
    \begin{actionenv}#3%
        \def\insertblocktitle{#2}%
        \par%
        \usebeamertemplate{block alerted begin}}
    {\par%
    \usebeamertemplate{block alerted end}%
    \end{actionenv}}

\mode<all>
