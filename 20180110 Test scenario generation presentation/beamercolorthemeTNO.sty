%% The template is best used in 16:9 aspect ratio using PDFLATEX to compile.
%% The traditional aspect ratio of 4:3 is also available.

\mode<presentation>

%% Color definitions
\definecolor{TNOred}{RGB}{204,0,0}
\definecolor{TNOgreen}{RGB}{51,153,51}
\definecolor{TNOblue}{RGB}{102,153,204}
\definecolor{TNOdarkblue}{RGB}{51,102,153}
\definecolor{TNOorange}{RGB}{255,102,0}
\definecolor{TNOyellow}{RGB}{255,204,51}
\definecolor{TNOgray}{RGB}{166,166,166}
\definecolor{TNOlightgray}{RGB}{222,222,231}

%% Text & text elements color specification
\setbeamercolor{item}{fg=TNOblue}
\setbeamercolor{frametitle}{fg=TNOblue}
\setbeamercolor{alerted text}{fg=TNOred}

%% Block color specification
\setbeamercolor{block title}{fg=TNOblue,bg=white!90!black}
\setbeamercolor{block body}{bg=white!95!black}
\setbeamercolor{block title alerted}{fg=TNOred,bg=white!90!TNOred}
\setbeamercolor{block body alerted}{bg=white!95!TNOred}
\setbeamercolor{block title example}{fg=TNOgreen,bg=white!90!black}
\setbeamercolor{block body example}{bg=white!95!black}
\setbeamercolor{block body definition}{fg=TNOred}

%% Navigation buttons
\setbeamercolor{button}{bg=TNOgray,fg=white}

\mode<all>
